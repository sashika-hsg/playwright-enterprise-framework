{
  "compilerOptions": {
    "types" : ["node"],
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "src",
    "paths": {
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@pages/*": ["pages/*"],
      "@flows/*": ["flows/*"],
      "@data/*": ["data/*"],
      "@adapters/*": ["adapters/*"],
      "@utils/*": ["utils/*"],
      "@fixtures/*": ["fixtures/*"]
    },
    "ignoreDeprecations": "6.0"
  },
  "include": ["src", "playwright.config.ts"]
}
