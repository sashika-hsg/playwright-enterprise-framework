{
  "compilerOptions": {
    "types" : ["node"],
    "target": "ES2021",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@pages/*": ["src/pages/*"],
      "@flows/*": ["src/flows/*"],
      "@data/*": ["src/data/*"],
      "@adapters/*": ["src/adapters/*"],
      "@utils/*": ["src/utils/*"],
      "@fixtures/*": ["src/fixtures/*"]
    },
    "ignoreDeprecations": "6.0"
  },
  "include": ["src", "playwright.config.ts"]
}
